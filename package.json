{
  "name": "mmd-js",
  "version": "0.1.2",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install": "npm run napi:compile",
    "build:napi": "npm run napi:compile",
    "build:wasm": "npm run wasm:build",
    "build:js": "tsc -p . --noEmit false",
    "build": "concurrently --kill-others-on-fail -s all \"npm:build:napi\" \"npm:build:wasm\" \"npm:build:js\"",
    "demo": "ts-node bin/demo.ts",
    "napi:compile": "cmake-js compile -d packages/napi -O build/napi",
    "wasm:configure": "emcmake cmake -S packages/wasm -B build/wasm",
    "wasm:build": "emmake make -C build/wasm"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bindings": "^1.5.0",
    "cmake-js": "^7.2.1",
    "node-addon-api": "^6.1.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.56",
    "@types/bindings": "^1.5.1",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^20.2.1",
    "commander": "^10.0.1",
    "concurrently": "^8.0.1",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "prettier": "^2.8.8",
    "trim-buffer": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
